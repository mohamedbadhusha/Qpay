{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container">
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li>
                        <a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a>
                    </li>
                {% endfor %}
            </ul>
        </div>      
        
        <div class="heading">
            <img src="view/image/payment/qpay.png" alt="" />
        </div>
    </div>


    <div class="container-fluid">
        {% if text_error != '' %}
            <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{text_error}}</div>
        {% endif%}  
        {% if text_success != '' %}
            <div class="alert alert-success"></i> {{text_success}}</div>
        {% endif%}  

    </div>


</div>

{{ footer }}